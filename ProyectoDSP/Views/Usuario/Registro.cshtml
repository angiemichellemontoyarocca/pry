@{
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <LINK REL=StyleSheet HREF="~/css/style.css" TYPE="text/css" MEDIA=screen>
</head>
<body>
    <div class="container">

        <h1>FORMULARIO</h1>
        <form asp-controller="Usuario" asp-action="Listar" method="post">
            <div class="form-group">
                <label for="formGroupExampleInput">Ingrese Id</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Id" asp-for="Id">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese el Username</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Username" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Contraseña</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Contraseña" asp-for="Contraseña">
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Apellido Paterno</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Paterno" asp-for="Paterno">
                <span asp-validation-for="Paterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Apellido Materno</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Materno" asp-for="Materno">
                <span asp-validation-for="Materno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Edad</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Edad" asp-for="Edad">
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Direccion</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Direccion" asp-for="Direccion">
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" value="btn" name="grabar"  data-toggle="modal" data-target="#exampleModal">Grabar</button>
                <button type="submit" class="btn btn-primary" value="btn" name="modificar">Modificar</button>
            </div>
            <div class="form-group">
            </div>
            <div class="text-dark">
                <a asp-action="Index"></a>
            </div>
        </form>
    </div>

</body>
</html>
